<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qiu.department.dao.RepairDao">

    <resultMap type="com.qiu.department.entity.Repair" id="RepairMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="device" column="device" jdbcType="VARCHAR"/>
        <result property="reason" column="reason" jdbcType="VARCHAR"/>
        <result property="state" column="state" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RepairMap">
        select
          id, user_id, device, reason, state
        from department.t_repair
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RepairMap">
        select
          id, user_id, device, reason, state
        from department.t_repair
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="RepairMap">
        select
          id, user_id, device, reason, state
        from department.t_repair
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="device != null and device != ''">
                and device = #{device}
            </if>
            <if test="reason != null and reason != ''">
                and reason = #{reason}
            </if>
            <if test="state != null">
                and state = #{state}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into department.t_repair(user_id, device, reason, state)
        values (#{userId}, #{device}, #{reason}, #{state})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update department.t_repair
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="device != null and device != ''">
                device = #{device},
            </if>
            <if test="reason != null and reason != ''">
                reason = #{reason},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from department.t_repair where id = #{id}
    </delete>

</mapper>